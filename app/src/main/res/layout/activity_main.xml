<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/mabt1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="95dp"
        android:background="#FFFFFF"
        android:textColor="#0A0A0A"
        android:textSize="20dp"
        android:text="纪念日" />

    <Button
        android:id="@+id/mabt2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mabt1"
        android:layout_toRightOf="@id/mabt1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        android:text="日常"
        android:textColor="#0A0A0A"
        android:textSize="20dp" />

    <Button
        android:id="@+id/mabt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mabt1"
        android:layout_toRightOf="@id/mabt2"
        android:layout_toLeftOf="@id/mabt4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="100dp"
        android:background="#FFFFFF"
        android:text="日记"
        android:textColor="#0A0A0A"
        android:textSize="20dp" />

    <Button
        android:id="@+id/mabt4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mabt1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        android:textColor="#0A0A0A"
        android:textSize="20dp"
        android:text="相册" />

    <ImageView
        android:id="@+id/main_spaceAdd"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="0dp"
        android:src="@mipmap/ios_add" />
    <!--<ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/sz144"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        />-->

</RelativeLayout>